<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".SignUpActivity">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="match_parent"
        android:gravity="center|center_vertical"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="131dp"
            android:layout_height="168dp"
            android:contentDescription="TODO"
            app:srcCompat="@drawable/logov2" />

        <TextView
            android:id="@+id/textViewAppName"
            android:layout_width="216dp"
            android:layout_height="wrap_content"
            android:text="FitCoach"
            android:textAlignment="center"
            android:textSize="28sp" />

        <View
            android:id="@+id/divider2"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="?android:attr/listDivider" />

        <TextView
            android:id="@+id/textNameUser"
            android:layout_width="216dp"
            android:layout_height="wrap_content"
            android:paddingHorizontal="10dp"
            android:text="Nombres" />

        <EditText
            android:id="@+id/textUserName"
            android:layout_width="216dp"
            android:layout_height="wrap_content"
            android:hint="Jon Mikel"
            android:inputType="text"
            android:minHeight="48dp"
            android:paddingHorizontal="10dp"
            tools:ignore="TextContrastCheck,TextContrastCheck,TextContrastCheck" />

        <TextView
            android:id="@+id/textLastName"
            android:layout_width="216dp"
            android:layout_height="wrap_content"
            android:paddingHorizontal="10dp"
            android:text="Apellidos" />

        <EditText
            android:id="@+id/textUserLastName"
            android:layout_width="216dp"
            android:layout_height="wrap_content"
            android:hint="Doe Dom"
            android:inputType="text"
            android:minHeight="48dp"
            android:paddingHorizontal="10dp" />

        <TextView
            android:id="@+id/textUserEmail"
            android:layout_width="216dp"
            android:layout_height="wrap_content"
            android:paddingHorizontal="10dp"
            android:text="Correo" />

        <EditText
            android:id="@+id/textUserEmailR"
            android:layout_width="216dp"
            android:layout_height="wrap_content"
            android:hint="example@example.com"
            android:inputType="textEmailAddress"
            android:minHeight="48dp"
            android:paddingHorizontal="10dp" />

        <TextView
            android:id="@+id/textUserPassword"
            android:layout_width="216dp"
            android:layout_height="wrap_content"
            android:paddingHorizontal="10dp"
            android:text="Contraseña" />

        <EditText
            android:id="@+id/textPasswordUserR"
            android:layout_width="216dp"
            android:layout_height="wrap_content"
            android:hint="********"
            android:inputType="textNoSuggestions|textPassword"
            android:minHeight="48dp"
            android:paddingHorizontal="10dp" />

        <CheckBox
            android:id="@+id/checkBoxTerms"
            android:layout_width="216dp"
            android:layout_height="wrap_content"
            android:text="Acepto los términos y condiciones." />

        <Button
            android:id="@+id/buttonSignUp"
            android:layout_width="213dp"
            android:layout_height="wrap_content"
            android:background="#E0903A"
            android:text="Registrarme"
            android:textColor="#4A148C" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="216dp"
            android:layout_height="28dp"
            android:gravity="center"
            android:text="o registrarse con: " />

        <LinearLayout
            android:layout_width="210dp"
            android:layout_height="56dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/googleSignUp"
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:layout_weight="1"
                app:srcCompat="@drawable/google"
                tools:ignore="SpeakableTextPresentCheck" />

            <View
                android:id="@+id/divider"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="?android:attr/listDivider" />

            <ImageButton
                android:id="@+id/facebookSignUp"
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:layout_weight="1"
                app:srcCompat="@drawable/facebook"
                tools:ignore="SpeakableTextPresentCheck" />
        </LinearLayout>


    </LinearLayout>

</RelativeLayout>